<div class="header-section">
  <button class="button button-primary" {{action 'addNewFilter'}}>Add new filter</button>
</div>

{{#table/table-wrapper headerColumns=listHeaders content=model sortOrder=sort_order sortColumn=sort_column}}
  {{#each model as |filter|}}
    {{! template-lint-disable invalid-interactive}}
    <tr {{action 'goToDetails' filter}}>
      <td>{{filter.description}}</td>
      <td>
        {{#each filter.actions as |action|}}
          <div>
            <span class="text-muted">{{action.action_name}}</span>
            {{#if action.label_name}}
              - {{action.label_name}}
            {{/if}}
          </div>
        {{/each}}
      </td>
      <td>
        <span class="cursor-pointer" {{action 'editFilter' filter}}>{{inline-svg 'pencil' class="icon"}}</span>
        <span class="cursor-pointer" {{action 'removeFilter' filter}}>{{inline-svg 'remove' class="icon"}}</span>
      </td>
    </tr>
  {{/each}}
{{/table/table-wrapper}}
